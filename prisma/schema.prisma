// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Pokemon {
  id        Int           @id @default(autoincrement())
  name      String
  types     PokemonType[]
  sprite    String

  @@index([name])
}

model PokemonType {
  type     String    @id
  pokemons Pokemon[]
}
